{
  "id": null,
  "title": "Platform Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "HTTP Requests",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(nokta_http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "HTTP Errors",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(nokta_http_errors_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Error Rate",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg(nokta_http_error_rate)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 }
    },
    {
      "type": "table",
      "title": "Requests by Status",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nokta_http_status_total",
          "format": "table",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "total"
            }
          }
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 }
    },
    {
      "type": "graph",
      "title": "Route Duration (avg)",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nokta_route_duration_seconds{stat=\"avg\"}",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 }
    }
  ]
}
